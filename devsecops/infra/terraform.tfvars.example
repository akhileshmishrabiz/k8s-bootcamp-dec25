# VPC Configuration
# Replace with your actual VPC ID
vpc_id = "vpc-xxxxxxxxx"

# Replace with your actual subnet IDs (must be in at least 2 different AZs)
subnet_ids = [
  "subnet-xxxxxxxx",  # AZ 1
  "subnet-yyyyyyyy"   # AZ 2
]

# Database Configuration
db_identifier = "production-postgres"
db_name       = "appdb"
db_username   = "dbadmin"

# Instance Configuration
instance_class      = "db.t3.small"
allocated_storage   = 20
max_allocated_storage = 100

# High Availability
multi_az = true

# Backup Configuration
backup_retention_period = 7

# Security Configuration
# Replace with your VPC CIDR or specific CIDR blocks that need database access
allowed_cidr_blocks = [
  "10.0.0.0/16"  # Example: VPC CIDR
]

# Performance Insights
performance_insights_enabled          = true
performance_insights_retention_period = 7

# Deletion Protection (set to false only if you want to allow deletion)
deletion_protection = true

# Tags
environment = "production"
project     = "k8s-bootcamp"

# PostgreSQL Version
engine_version = "16.6"
